#!/bin/bash
cd "$(dirname "$0")"

VERSION=0.6.7

echo "[Info] building velvet tools version $VERSION"

git clone --depth 1 --branch $VERSION https://github.com/thenameisluk/velvettools/ > /dev/null 2>/dev/null

cd velvettools
./build_deb > /dev/null 2>/dev/null
cd ..
if [ "$1" == "" ]; then
    mv velvettools/*.deb .
else
    mv velvettools/*.deb "$1"/
fi

rm -rf velvettools
